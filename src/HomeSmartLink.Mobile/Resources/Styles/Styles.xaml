<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Page Styles -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource Background}" />
        <Setter Property="BarTextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <!-- ============================================ -->
    <!-- TYPOGRAPHY -->
    <!-- ============================================ -->

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="DisplayLarge" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="48" />
        <Setter Property="LineHeight" Value="1.1" />
    </Style>

    <Style x:Key="DisplayMedium" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="LineHeight" Value="1.1" />
    </Style>

    <Style x:Key="Headline" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="LineHeight" Value="1.2" />
    </Style>

    <Style x:Key="Title" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="LineHeight" Value="1.3" />
    </Style>

    <Style x:Key="Subtitle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="1.4" />
    </Style>

    <Style x:Key="Body" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.5" />
    </Style>

    <Style x:Key="Caption" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextMuted}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="LineHeight" Value="1.4" />
    </Style>

    <Style x:Key="Overline" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextMuted}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="CharacterSpacing" Value="1.5" />
        <Setter Property="TextTransform" Value="Uppercase" />
    </Style>

    <Style x:Key="Temperature" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="56" />
        <Setter Property="LineHeight" Value="1" />
    </Style>

    <Style x:Key="TemperatureSmall" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="LineHeight" Value="1" />
    </Style>

    <Style x:Key="StatValue" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="LineHeight" Value="1.2" />
    </Style>

    <!-- ============================================ -->
    <!-- ENTRY / INPUT STYLES -->
    <!-- ============================================ -->

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- ============================================ -->
    <!-- BUTTON STYLES -->
    <!-- ============================================ -->

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,16" />
        <Setter Property="MinimumHeightRequest" Value="52" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{StaticResource TextDisabled}" />
                            <Setter Property="BackgroundColor" Value="{StaticResource SurfaceVariant}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
        <Setter Property="BorderWidth" Value="1.5" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,16" />
        <Setter Property="MinimumHeightRequest" Value="52" />
    </Style>

    <Style x:Key="GhostButton" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceVariant}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="WidthRequest" Value="48" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <Style x:Key="DangerButton" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Error}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,16" />
        <Setter Property="MinimumHeightRequest" Value="52" />
    </Style>

    <Style x:Key="SuccessButton" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Success}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,16" />
        <Setter Property="MinimumHeightRequest" Value="52" />
    </Style>

    <!-- ============================================ -->
    <!-- CARD / CONTAINER STYLES -->
    <!-- ============================================ -->

    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <Style TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16" />
        <Setter Property="Padding" Value="20" />
    </Style>

    <Style x:Key="Card" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16" />
        <Setter Property="Padding" Value="20" />
    </Style>

    <Style x:Key="CardElevated" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceElevated}" />
        <Setter Property="Stroke" Value="{StaticResource BorderColorLight}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 20" />
        <Setter Property="Padding" Value="24" />
    </Style>

    <Style x:Key="CardCompact" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 12" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <Style x:Key="InputContainer" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceVariant}" />
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 12" />
        <Setter Property="Padding" Value="16,12" />
    </Style>

    <!-- ============================================ -->
    <!-- FORM CONTROLS -->
    <!-- ============================================ -->

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource Primary}" />
    </Style>

    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource Primary}" />
        <Setter Property="ThumbColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{StaticResource Primary}" />
        <Setter Property="MaximumTrackColor" Value="{StaticResource SurfaceVariant}" />
        <Setter Property="ThumbColor" Value="{StaticResource Primary}" />
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource Primary}" />
    </Style>

    <!-- ============================================ -->
    <!-- STATUS BADGES -->
    <!-- ============================================ -->

    <Style x:Key="StatusBadge" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style x:Key="StatusBadgeSuccess" TargetType="Border" BasedOn="{StaticResource StatusBadge}">
        <Setter Property="BackgroundColor" Value="{StaticResource SuccessBg}" />
    </Style>

    <Style x:Key="StatusBadgeWarning" TargetType="Border" BasedOn="{StaticResource StatusBadge}">
        <Setter Property="BackgroundColor" Value="{StaticResource WarningBg}" />
    </Style>

    <Style x:Key="StatusBadgeError" TargetType="Border" BasedOn="{StaticResource StatusBadge}">
        <Setter Property="BackgroundColor" Value="{StaticResource ErrorBg}" />
    </Style>

    <Style x:Key="StatusBadgeInfo" TargetType="Border" BasedOn="{StaticResource StatusBadge}">
        <Setter Property="BackgroundColor" Value="{StaticResource InfoBg}" />
    </Style>

</ResourceDictionary>
