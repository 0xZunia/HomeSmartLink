<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Brand Colors -->
    <Color x:Key="Primary">#6366F1</Color>
    <Color x:Key="PrimaryDark">#4F46E5</Color>
    <Color x:Key="PrimaryLight">#A5B4FC</Color>
    <Color x:Key="PrimaryMuted">#312E81</Color>

    <!-- Secondary/Accent Colors -->
    <Color x:Key="Secondary">#14B8A6</Color>
    <Color x:Key="SecondaryDark">#0D9488</Color>
    <Color x:Key="Accent">#F472B6</Color>

    <!-- Surface Colors - Refined Dark Theme -->
    <Color x:Key="Background">#0F0F14</Color>
    <Color x:Key="Surface">#1A1A24</Color>
    <Color x:Key="SurfaceVariant">#252532</Color>
    <Color x:Key="SurfaceElevated">#2A2A3A</Color>
    <Color x:Key="CardBackground">#1E1E2E</Color>
    <Color x:Key="CardBackgroundHover">#262638</Color>
    <Color x:Key="BorderColor">#3F3F5A</Color>
    <Color x:Key="BorderColorLight">#4A4A6A</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#F8FAFC</Color>
    <Color x:Key="TextSecondary">#94A3B8</Color>
    <Color x:Key="TextMuted">#64748B</Color>
    <Color x:Key="TextDisabled">#475569</Color>

    <!-- Status Colors -->
    <Color x:Key="Success">#22C55E</Color>
    <Color x:Key="SuccessLight">#4ADE80</Color>
    <Color x:Key="SuccessBg">#14532D</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="WarningLight">#FBBF24</Color>
    <Color x:Key="WarningBg">#78350F</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="ErrorLight">#F87171</Color>
    <Color x:Key="ErrorBg">#7F1D1D</Color>
    <Color x:Key="Info">#3B82F6</Color>
    <Color x:Key="InfoLight">#60A5FA</Color>
    <Color x:Key="InfoBg">#1E3A5F</Color>

    <!-- Temperature Colors -->
    <Color x:Key="TempCold">#38BDF8</Color>
    <Color x:Key="TempWarm">#FB923C</Color>
    <Color x:Key="TempHot">#F87171</Color>
    <Color x:Key="TempComfort">#4ADE80</Color>

    <!-- Heating State Colors -->
    <Color x:Key="HeatingOn">#F97316</Color>
    <Color x:Key="HeatingOnBg">#431407</Color>
    <Color x:Key="HeatingOff">#6B7280</Color>
    <Color x:Key="HeatingOffBg">#1F2937</Color>
    <Color x:Key="HeatingMaintain">#EAB308</Color>
    <Color x:Key="HeatingMaintainBg">#422006</Color>
    <Color x:Key="HeatingComfort">#22C55E</Color>
    <Color x:Key="HeatingComfortBg">#14532D</Color>

    <!-- Gradient Colors -->
    <Color x:Key="GradientStart">#6366F1</Color>
    <Color x:Key="GradientEnd">#8B5CF6</Color>

</ResourceDictionary>
